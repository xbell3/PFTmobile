<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/txtListHistoSNIG"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="SNIG:"
            android:padding="4dp"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/txtListNombreEnfermedad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Enfermedad:"
            android:textSize="20sp" />



    </LinearLayout>

    <TextView
        android:id="@+id/txtListVariante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Variante"
        android:padding="3dp"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/txtListGravedad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gravedad"
        android:padding="3dp"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/txtListFecDeteccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha deteccion:"
        android:padding="3dp"
        android:textSize="20sp"
        />

</LinearLayout>